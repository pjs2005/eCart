<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>
<table>
<% @cart.items_in_carts.each do | item| %>
<tr>
<td><%= item.quantity %> &times;</td>
<td><%= item.product.title %></td>
<td class="total_price"><%= number_to_currency(item.total_price) %>
<td><%= link_to 'Remove Item' , item, method: :delete, data: {confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
<tr>
<td colspan="2">Total</td>
<td class="grand_total"><%= number_to_currency(@cart.total_price) %></td>
</tr>
</table>
<%= button_to 'Empty Cart', @cart, method: :delete,
data: {confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
